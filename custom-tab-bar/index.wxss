
.bar_container {
  display: flex;
  align-items: center;
  height: 98rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  background-color: #FBFBFB;
}

.bar_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bar_icon {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-bottom: 12rpx;
}

.bar_title {
  font-size: 20rpx;
  color: #333333;
  font-weight: 500;
}

.bar_title_act {
  color: #D7291D;
}