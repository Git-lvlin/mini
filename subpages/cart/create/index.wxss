
page {
  background-color:#f5f5f5;
}

.nav_head {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
  width: 100vw;
  height: 48rpx;
  background-position: top center;
}

.head {
  position: absolute;
  bottom: 14rpx;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.head_img {
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
}

.head_title {
  font-weight: 500;
  color: #ffffff;
  font-size: 36rpx;
  line-height: 48rpx;
  margin-left: 16rpx;
}

.nav_back {
  position: absolute;
  bottom: 14rpx;
  left: 32rpx;
  width: 48rpx;
  height: 48rpx;
}

.nav_height {
  position: relative;
  /* flex-grow: 0;
  flex-shrink: 0; */
}

.back {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
  width: 100%;
}

.content {
  position: relative;
  z-index: 1;
  padding: 20rpx 24rpx;
}


/* 选择地址 */
.address {
  display: flex;
  align-items: center; 
  justify-content: center;
  width: 100%;
  box-sizing: border-box;
  padding: 32rpx;
  margin-bottom: 24rpx;
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0rpx 8rpx 16rpx rgba(0, 0, 0, 0.01);
}

.no_address {
  display: flex;
  align-items: center;
  justify-content: center;
}

.add_address {
  width: 56rpx;
  height: 56rpx;
  vertical-align: middle;
  margin-right: 32rpx;
}

.no_address_title {
  color: #333333;
  font-size: 32rpx;
  line-height: 56rpx;
}

.select_view {
  display: flex;
  align-items: center;
}

.location_icon {
  flex-grow: 0;
  flex-shrink: 0;
  width: 64rpx;
  height: 64rpx;
  margin-right: 32rpx;
}

.address_info {
  flex: 1;
  width: 494rpx;
  /* width: 478rpx; */
  overflow: hidden;
  margin-right: 32rpx;
}

.address_info .name {
  font-weight: 500;
  color: #333333;
  font-size: 32rpx;
  line-height: 44rpx;
  margin-bottom: 8rpx;
}

.address_info .phone {
  color: #999999;
  font-size: 26rpx;
  line-height: 36rpx;
  padding-left: 16rpx;
}

.address_detail {
  color: #333333;
  font-size: 24rpx;
  line-height: 34rpx;
}

.right_icon {
  flex-grow: 0;
  flex-shrink: 0;
  width: 16rpx;
  height: 28rpx;
}


/* 订单金额 */
.order_price {
  padding: 32rpx;
  background-color:#ffffff;
  border-radius: 24rpx;
  box-shadow: 0rpx 8rpx 16rpx rgba(0, 0, 0, 0.01);
}

.cell_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.cell_name {
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
  font-weight: 600;
}

.cell_value {
  font-weight: 500;
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
  padding-right: 34rpx;
}

.coupon {
  color: #cccccc;
}

.coupon_text {
  margin-right: 16rpx;
}

.coupon_money {
  font-weight: 500;
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
  padding-right: 16rpx;
}

.coupon_money_more {
  color: #e5352f;
}

.input_msg {
  width: 320rpx;
  height: 40rpx;
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: right;
}

.input_placeholder {
  font-weight: 500;
  color:  #cccccc;
  font-size: 28rpx;
  line-height: 40rpx;
}


/* 结算总价 */
.submit_order {
  width: 100%;
  height: 100rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.submit_total_price {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  width: calc(100% - 32rpx);
  height: 100rpx;
  padding-right: 32rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  background-color: #fff;
}

.submit_btn {
  width: 220rpx;
  height: 68rpx;
  font-weight:500;
  color: #ffffff;
  font-size: 28rpx;
  line-height: 68rpx;
  text-align: center;
  margin-left: 32rpx;
  background-image: linear-gradient(270deg,#fb5f2a 0%,#e5352f 100%);
  border-radius: 34rpx;
}