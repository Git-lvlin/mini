<wxs module="tools" src="../../../wxs/common.wxs" />

<view class="container">
  <block wx:if="{{false}}">
    <view class="address_list">
      <view class="address_item">
        <view class="address_head">
          <view class="address_info">
            <view class="author"><text>可乐</text><text class="phone">18924245350</text></view>
            <view class="address text_two_line"><text class="def_address">默认</text>广东省 深圳市 宝安区 西乡街道</view>
          </view>
          <image class="edit_icon" src="{{tools.getImgUrl('miniprogram/common/edit%402x.png')}}" />
        </view>
        <view class="address_footer">
          <image
            class="choose_icon"
            src="{{tools.getImgUrl('miniprogram/common/def_choose.png')}}"
          />
          <view class="footer_text">默认地址</view>
        </view>
      </view>
    </view>

    <view class="add_content">
      <view class="btn" bindtap="onToEditAddress">
        <image class="btn_icon" src="{{tools.getImgUrl('miniprogram/common/white_add.png')}}" />添加收货地址
      </view>
    </view>
  </block>

  <nodata
    title="您还没有收货地址，请点击下方+新建"
  />
</view>