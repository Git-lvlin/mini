} */

.select_item {
  width: 102rpx;
  height: 80rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
}

.select_item:not(:last-child) {
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
}

.select_item_act {
  color: #d7291d;
}

.search_box {
  flex: 1;
  height: 64rpx;
  background: #FDFDFD;
  border-radius: 32rpx;
  border: 4rpx solid #FF0000;
}

.search {
  flex: 1;
  padding-right: 12rpx;
}

.search_input {
  /* background: #F4F4F4 !important; */
  flex: 1;
  color: #333;
  font-size: 28rpx;
  line-height: 40rpx;
  padding-right: 24rpx;
}

.search_icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: bottom;
  margin-right: 8rpx;
  margin-left: 18rpx;
}

.clear_input {
  width: 36rpx;
  height: 36rpx;
}

.search_btn {
  position: relative;
  left: 8rpx;
  margin-left: 12rpx;
  width: 108rpx;
  height: 56rpx;
  color: #FFFFFF;
  font-size: 28rpx;
  white-space: nowrap;
  line-height: 56rpx;
  border-radius: 32rpx;
  text-align: center;
  background: linear-gradient(90deg, #FF6E53 0%, #FF0000 100%);
}

.screen_box {
  position: fixed;
  top: 96rpx;
  left: 0;
  width: 100%;
}

.search_association {
  position: absolute;
  top: 96rpx;
  left: 0;
  z-index: 12;
  width: calc(100% - 24rpx); 
  max-height: calc(100vh - 96rpx);
  overflow-y: auto;
  padding-left: 24rpx;
  background-color: #fff;
}

.association_item {
  font-size: 28rpx;
  color: #333333;
  line-height: 40rpx;
  padding: 40rpx 0;
}

.association_item:not(:last-child) {
  border-bottom: 2rpx solid #f5f5f5;
}

.association_red {
  color: #d7291d;
}

.search_history {
  /* flex: 1;
  width: 100%;
  overflow-y: auto;
  background: linear-gradient(180deg, #fff 0%, #f5f5f5 100%); */
  margin: 0 auto;
  margin-top: 24rpx;
  width: 702rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
}

.history_clear {
  display: flex;
  align-items: center;
  padding: 22rpx 24rpx 20rpx;
}

.title {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.clear {
  font-size: 24rpx;
  color: #999999;
  line-height: 36rpx;
}

.clear_icon {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}

.option_list {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding: 0 4rpx 0 24rpx;
}

.item {
  display: flex;
  align-items: center;
  height: 56rpx;
  font-size: 28rpx;
  color: #333;
  padding: 0 26rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 6rpx;
}

.hot_title {
  font-size: 28rpx;
  color: #333;
  padding: 20rpx 24rpx;
}


.good_content {
  width: 100%;
  height: calc(100vh - 168rpx);
  /* padding-top: 24rpx; */
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
}

.good_list {
  width: 702rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  /* padding: 24rpx 12rpx; */
  margin: 0 auto;
  /* background: #FFFFFF; */
  border-radius: 16rpx 16rpx 0 0;
  box-sizing: border-box;
}

.null {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.null-icon {
  width: 320rpx;
  height: 320rpx;
}
.null-text {
  font-size: 32rpx;
  color: #888888;
}
.recommend-list {
  margin-top: 96rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.recommend-title {
  width: 316rpx;
  height: 50rpx;
  margin-bottom: 24rpx;
}
.recommend-list-box {
  display: flex;
  flex-direction: column;
  width: 702rpx;
  min-height: 810rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding-bottom: 140rpx;
}
.long-box {
  min-height: 0;
}
.short {
  padding-bottom: 0;
}
.recommend-item {
  position: relative;
  padding: 24rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 202rpx;
}
.rec-img-box {
  width: 200rpx;
  height: 202rpx;
  overflow: hidden;
}
.rec-img {
  width: 100%;
  height: 100%;
}
.rec-right-box {
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.rec-name {
  margin-bottom: 8rpx;
  width: 400rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #222222;
  font-size: 32rpx;
}
.rec-num {
  margin-bottom: 32rpx;
  font-size: 24rpx;
  color: #999999;
}
.rec-price-box {
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
  color: #FF0000;
}
.head {
  font-size: 24rpx;
}
.price-one {
  position: relative;
  top: 4rpx;
  font-size: 40rpx;
}
.price-two {
  font-size: 24rpx;
}
.mark-price {
  margin-left: 16rpx;
  font-size: 24rpx;
  color: #B2B2B2;
  text-decoration: line-through;
}
.add-btn-box {
  position: absolute;
  right: 24rpx;
  bottom: 46rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.step_delete_icon,.step_add_icon {
  width: 48rpx;
  height: 48rpx;
}
.step_index_num {
  margin: 0 8rpx;
  font-size: 36rpx;
  color: #333333;
}

.margin0 {
  margin-top: 0;
}
