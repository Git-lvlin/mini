page {
  background-color: #f8f8f8;
}

.sign_back {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 1222rpx;
}

.container {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

.nav_content {
  position: sticky;
  top: 0;
  z-index: 99;
  background-color: #f8f8f8;
  background-size: 100% auto;
  background-position: 0 0;
}

.nav_back {
  position: absolute;
  left: 32rpx;
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
}

.nav_title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  line-height: 50rpx;
}


.red_total {
  padding: 20rpx 24rpx;
  margin: 24rpx 24rpx 0;
  background: #FFFFFF;
  box-shadow: 0 4rpx 12rpx 0 rgba(0, 0, 0, 0.02);
  border-radius: 24rpx;
}

.red_icon {
  width: 72rpx;
  height: 72rpx;
  vertical-align: middle;
  margin-right: 8rpx;
}

.red_total_title {
  flex: 1;
  font-size: 36rpx;
  color: #FF3333;
  line-height: 50rpx;
}

.res_total_money {
  font-weight: 600;
}

.red_total_btn {
  width: 108rpx;
  height: 46rpx;
  font-size: 24rpx;
  color: #FA0D1E;
  background: #FFFFFF;
  border-radius: 46rpx;
  border: 2rpx solid #FA0D1E;
}

.red_right {
  width: 16rpx;
  height: 16rpx;
  vertical-align: middle;
  margin-left: 4rpx;
}


.sign_content {
  padding: 0 24rpx;
  margin-top: 24rpx;
  box-shadow: 0 4rpx 12rpx 0 rgba(0, 0, 0, 0.02);
}

.sign_head {
  justify-content: space-between;
  height: 64rpx;
  background: linear-gradient(90deg, #FFEFEF 0%, #FFFFFF 100%);
  border-radius: 24rpx 24rpx 0 0;
}

.sign_label_back {
  width: 274rpx;
  height: 64rpx;
  background-size: 100% 100%;
  background-position: 0 0;
}

.rule {
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
  padding-right: 24rpx;
}

.rule_icon {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-right: 4rpx;
}

.sign_label_title {
  width: 208rpx;
  height: 28rpx;
  vertical-align: middle;
}

.sign_box {
  padding: 32rpx 16rpx;
  background: #FFFFFF;
  border-radius: 0 0 24rpx 24rpx;
}

.sign_box_desc {
  justify-content: space-between;
}

.sign_desc_text {
  font-size: 28rpx;
  color: #666666;
  line-height: 40rpx;
  padding-left: 8rpx;
}

.sign_desc_day {
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
  padding-right: 8rpx;
}

.sign_day_list {
  margin-top: 32rpx;
}

.day_item {
  flex-direction: column;
  box-sizing: border-box;
  width: 88rpx;
  height: 186rpx;
  color: #F09103;
  text-align: center;
  background: #FEFAD3;
  border-radius: 8rpx;
}

.day_item_act {
  background: rgba(255, 51, 51, 0.1);
  border: 2rpx solid #FF3333;
}

.day_item:not(:last-child) {
  margin-right: 8rpx;
}

.day_text {
  font-size: 24rpx;
  line-height: 34rpx;
}

.day_item_act .day_text,
.day_item_act .day_money {
 display: none;
}

.day_icon {
  width: 72rpx;
  height: 72rpx;
  vertical-align: middle;
  margin-bottom: 8rpx;
}

.gife_icon {
  animation: gife_icon_act 1.2s linear infinite;
}

@keyframes gife_icon_act {
  0% {
    transform: scale(0.75);
  }
  50% {
    transform: scale(0.95);
  }
  100% {
    transform: scale(0.75);
  }
}

.day_money {
  font-size: 28rpx;
  line-height: 32rpx;
}

.signed_text {
  display: none;
  font-size: 24rpx;
  color: #FF3333;
  line-height: 34rpx;
}

.day_item_act .signed_text {
  display: block;
}

.sign_btn {
  width: 436rpx;
  height: 78rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #FFEEDE;
  line-height: 78rpx;
  text-align: center;
  margin: 32rpx auto 0;
  background: linear-gradient(90deg, #FF6E29 0%, #FE3016 23%, #F71210 100%);
  border-radius: 78rpx;
}

.sign_btn_def {
  color: #bbb;
  background: #eee;
}

/* 商品列表 */
.good_content {
  position: relative;
  flex: 1;
  height: 100rpx;
  padding-top: 14rpx;
  margin-top: 32rpx;
}

.good_content_back {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}

.good_content_title {
  position: relative;
  left: 50%;
  z-index: 2;
  width: 300rpx;
  height: 54rpx;
  vertical-align: middle;
  transform: translateX(-150rpx);
}

.gradual_back {
  position: absolute;
  top: 14rpx;
  z-index: 1;
  width: 100%;
  height: 150rpx;
  background: linear-gradient(180deg, #FDE5CF 0%, #FFFFFF 100%);
  border-radius: 24rpx 24rpx 0 0;
}

.good_white_back {
  position: absolute;
  top: 16rpx;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
}

.good_box {
  position: relative;
  z-index: 2;
}

.good_head_height {
  height: 74rpx;
}

.good_item {
  padding: 0 24rpx 32rpx;
}

.good_cover {
  width: 234rpx;
  height: 234rpx;
  vertical-align: middle;
}

.good_info {
  position: relative;
  flex: 1;
  margin-left: 16rpx;
}

.good_info_head {
  height: 144rpx;
}

.good_label {
  display: inline-block;
  height: 28rpx;
  font-size: 20rpx;
  color: #EB483F;
  line-height: 28rpx;
  padding: 0 12rpx;
  margin-bottom: 22rpx;
  background: rgba(235, 72, 63, 0.1);
  border-radius: 4rpx;
}

.good_name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  line-height: 44rpx;
  margin-bottom: 8rpx;
}

.sale_price {
  font-size: 30rpx;
  color: #D7291D;
  line-height: 42rpx;
}

.market_price {
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
  text-decoration: line-through;
}


.buy_btn {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 160rpx;
  height: 64rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  line-height: 64rpx;
  text-align: center;
  background: linear-gradient(90deg, #FF6E29 0%, #FE3016 23%, #F71210 100%);
  box-shadow: 2rpx 2rpx 4rpx 0 rgba(228, 45, 59, 0.3);
  border-radius: 64rpx;
}

/* 红包弹窗 */
.red_popup {
  position: relative;
  width: 632rpx;
  height: 752rpx;
}

.red_cover {
  position: absolute;
  z-index: 1;
  width: 632rpx;
  height: 752rpx;
  vertical-align: middle;
}

.red_popup_content {
  position: absolute;
  z-index: 2;
  width: 632rpx;
  height: 752rpx;
  padding-top: 270rpx;
  box-sizing: border-box;
}

.red_popup_head {
  flex-direction: column;
  height: 300rpx;
}

.revice_title {
  font-size: 40rpx;
  font-weight: 600;
  color: #FFE7B2;
  line-height: 48rpx;
}

.revice_price {
  font-size: 112rpx;
  font-weight: bold;
  color: #FFE7B2;
  line-height: 144rpx;
  padding-bottom: 24rpx;
  margin-top: 16rpx;
}

.popup_util {
  font-size: 36rpx;
  font-weight: 400;
}

.red_popup_btn {
  position: absolute;
  bottom: 116rpx;
  left: 50%;
  font-size: 32rpx;
  font-weight: 600;
  color: #FB3200;
  line-height: 44rpx;
  transform: translateX(-50%);
}

.red_popup_tip {
  position: absolute;
  bottom: 46rpx;
  left: 50%;
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 34rpx;
  transform: translateX(-50%);
}

.end_desc {
  font-size: 32rpx;
  color: #FFE7B2;
  margin-top: 18rpx;
}


/* 活动规则 */
.rule_content {
  padding: 0 32rpx 90rpx;
  background-color: #fff;
  border-radius: 34rpx 34rpx 0 0;
}

.rule_title {
  font-size: 36rpx;
  color: #333333;
  font-weight: 600;
  line-height: 50rpx;
  text-align: center;
  padding: 48rpx 0;
}

.rule_text {
  max-height: 65vh;
  font-size: 28rpx;
  color: #666666;
  line-height: 44rpx;
  white-space: pre-wrap;
  overflow-y: auto;
}

/* 签到红包明细 */
.red_btn_item {
  width: 170rpx;
  height: 80rpx;
  box-sizing: border-box;
  font-size: 22rpx;
  color: #666666;
  line-height: 80rpx;
  text-align: center;
  margin-right: 12rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
}

.red_use_act{
  font-weight: 600;
  color: #FA0D1E;
  background: #FFE9EA;
  border: 2rpx solid #FA0D1E;
}

.red_use_scroll {
  width: 686rpx;
  height: 598rpx;
  margin-top: 16rpx;
}

.red_use_list {
  width: 686rpx;
  box-sizing: border-box;
  padding: 0 24rpx;
  background: #FAFAFA;
  border-radius: 8rpx;
  overflow-y: auto;
}

.use_item {
  padding: 26rpx 0;
}

.use_item:not(:last-child) {
  border-bottom: 2px solid #EEEEEE;  
}

.use_info {
  flex: 1;
}

.use_name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  line-height: 40rpx;
  margin-top: 4rpx;
}

.use_time {
  font-size: 20rpx;
  color: #999999;
  line-height: 28rpx;
}

.use_money {
  font-size: 30rpx;
  font-weight: 600;
  line-height: 42rpx;
}

.red_text {
  color: #FF3333;
}

.green_text {
  color: #51C380;
}