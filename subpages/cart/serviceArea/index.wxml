<wxs module="tools" src="../../../wxs/common.wxs" />

<view class="container">
  <view class="content_view">
    <view class="form_item" >
      <view class="form_name">负责人</view>
      <input
        class="form_input"
        value="{{postData.consignee}}"
        maxlength="10"
        placeholder="请输入姓名"
        placeholder-class="form_placeholder"
        data-field="consignee"
        data-text="请输入姓名"
        bindinput="handleInput"
      />
    </view>
    <view class="form_item" >
      <view class="form_name">手机号码</view>
      <input
        type="number"
        class="form_input"
        value="{{postData.phone}}"
        maxlength="11"
        placeholder="请输入手机号码"
        placeholder-class="form_placeholder"
        data-field="phone"
        data-text="请输入姓名"
        bindinput="handleInput"
      />
    </view>
    <view class="form_item" >
      <view class="form_name">申请服务区域</view>
      <input
        class="form_input"
        value="{{selectAddress.areaStr}}"
        disabled="{{true}}"
        placeholder="省市区/县"
        placeholder-class="form_placeholder"
        bindtap="onOpenAddress"
      />
      <view class="location">
        <image class="location_icon" src="{{tools.getImgUrl('miniprogram/common/rigth_arrw.png')}}" />
      </view>
    </view>
  </view>

  <view class="confirmation_reminder">提示：请如实填写所在地，提交后不可修改。</view>

  <view class="reminder">提示：您选择的区域已被占用，请选择其他区域</view>

  <view class="save_btn" bindtap="onSave">确认</view>

  <address-popup
    show="{{ showPopup }}"
    editData="{{ editData }}"
    isEdit="{{ isEdit }}"
    bind:close="onCloseAddress"
    bind:setAddress="handleEditAddress"
  />
</view>