.submit_success {
    height: 100vh;
    overflow: auto;
    background-color: #fff;
}


.submit_item{
    text-align: center;
}

.submit_item .success_icon {
    width: 80rpx;
    height: 80rpx;
    margin: 20rpx auto;
  }


.submit_item .success{
    font-size: 48rpx;
    font-family: PingFang SC-Bold, PingFang SC;
    font-weight: 400;
    color: #333333;
    line-height: 58rpx;
    margin-bottom: 50rpx;
}

.submit_item .suggest{
    font-size: 36rpx;
    font-family: Source Han Sans CN-Regular, Source Han Sans CN;
    font-weight: 400;
    color: #666666;
    line-height: 68rpx;
    margin-bottom: 150rpx;
}

.submit_item button{
    width: 700rpx;
    height: 98rpx;
    margin: 0 auto;
    display: block;
    background: linear-gradient(95deg, #FF6E53 0%, #FF0000 100%);
    box-shadow: 0rpx 6rpx 12rpx 0rpx rgba(229,53,47,0.4);
    border-radius: 16rpx 16rpx 16rpx 16rpx;
    opacity: 1;
    font-size: 32rpx;
    font-family: PingFang SC-Heavy, PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
    line-height: 98rpx;

}
