page {
  background-color: #F5F5F5;
  padding-bottom: 50rpx;
}

.page {
  padding: 10rpx 0 200rpx;
}

.label {
  position: relative;
}

.copy {
  display: inline-block;
  color: #FA0D1E;
  position: absolute;
  padding: 20rpx;
  bottom: -20rpx;
  margin-left: -10rpx;
}

.edit {
  width: 100%;
  position: fixed;
  text-align: center;
  font-size: 28rpx;
  color: #F12222;
  background: rgba(245,245,245,1);
  line-height: 100rpx;
  bottom: 0;
}