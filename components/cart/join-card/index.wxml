<wxs module="tools" src="../../../wxs/common.wxs" />

<view
  class="join_card {{border ? 'join_card_border' : ''}}"
  style="width: {{width}}"
  bindtap="onToDetail"
>
  <van-image
    width="160rpx"
    height="160rpx"
    fit="cover"
    custom-class="good_img"
    src="{{good.goodsImageUrl}}"
  />
  <view class="card_info">
    <view class="title text_one_line">{{good.goodsName}}</view>
    <view class="desc text_one_line">{{good.goodsDesc}}</view>
    <!-- <view class="sale">月销 {{good.goodsSaleNum}}件</view> -->
    <view class="sale">{{good.goodsSaleNum}}</view>
    <view class="price">
      <view class="text"><text class="unit">￥</text>{{good.goodsSaleMinPrice}}<view class="market_price">¥{{good.goodsMarketPrice}} </view></view>
      <view class="num_controller">
        <image class="icon" wx:if="{{stock}}" src="{{tools.getImgUrl('miniprogram/cart/reduce%402x.png')}}" bindtap="reduceStock" />
        <!-- <input
          class="num_input"
          value="{{stock}}"
          wx:if="{{stock}}"
        /> -->
        <view class="num_input" wx:if="{{stock}}" >{{stock}}</view>
        <image class="icon" src="{{tools.getImgUrl('miniprogram/cart/add%402x.png')}}" bindtap="addStock" />
      </view>
    </view>
  </view>
  <!-- <view class="right_space" /> -->
</view>
