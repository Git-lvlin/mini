.cart_button {
  padding-bottom: 10rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 120rpx;
  background-color: #F7F7F7;
  overflow: hidden;
  z-index: 9999;
}
.top_cart {
  position: fixed;
  bottom: 98rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 120rpx;
  background-color: #F7F7F7;
  overflow: hidden;
  z-index: 9999;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.cart_popup_click_box {
  margin-left: 34rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.cart_icon_box {
  position: relative;
}

.cart_icon {
  width: 72rpx;
  height: 75rpx;
}

.cart_num {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 32rpx;
  text-align: center;
  line-height: 32rpx;
  border-radius: 16rpx;
  border: 2rpx solid #FF0000;
  background-color: #FFFFFF;
  font-size: 22rpx;
  color: #FF0000;
}
.cart_text_box {
  margin-left: 18rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
}
.cart_text_head {
  color: #333333;
  font-size: 30rpx;
}
.price_head {
  font-size: 24rpx;
  color: #FF0000;
}
.price {
  position: relative;
  top: 4rpx;
  font-size: 40rpx;
  color: #FF0000;
}
.zprice {
  font-size: 24rpx;
  color: #FF0000;
}
.btn {
  margin-right: 24rpx;
  width: 200rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background-image: linear-gradient(145deg, #ED8065 0%, #D7291D 100%);
  border-radius: 36rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}