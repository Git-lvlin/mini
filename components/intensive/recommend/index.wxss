

.list {
  box-sizing: border-box;
  width: 702rpx;
  /* min-height: 1064rpx; */
  margin: 0 auto;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
}

.title-box {
  padding-top: 38rpx;
  padding-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.title {
  height: 50rpx;
  font-size: 36rpx;
  color: #333333;
  margin: 0 18rpx;
}
.after {
  color: #999999;
  font-size: 28rpx;
}

.tips-box {
  position: relative;
  width: 100%;
  height: 74rpx;
}
.tips_title {
  width: 100%;
  height: 100%;
}
.tips-after {
  margin-right: 4rpx;
  width: 26rpx;
  height: 26rpx;
  border: 1px solid #FFB84B;
  border-radius: 50%;
  text-align: center;
  color: #FFB84B;
  font-size: 22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tips-text {
  position: absolute;
  top: 12rpx;
  left: 20rpx;
  font-size: 36rpx;
  color: #FFFFFF;
}


.list-item {
  padding: 24rpx 24rpx 0 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #FFFFFF;
}
.list-item:nth-last-child(1) {
  padding-bottom: 24rpx;
}
.img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.right-box {
  width: 412rpx;
  height: 200rpx;
  margin-left: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  position: relative;
}
.name {
  width: 100%;
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}
.price-box {
  display: flex;
  justify-content: flex-start;
}
.tab_icon_box {
  position: relative;
  width: 204rpx;
  height: 38rpx;
  margin-bottom: 22rpx;
}
.tab_icon {
  width: 100%;
  height: 100%;
}
.tab_icon_text {
  position: absolute;
  top: 2rpx;
  right: 6rpx;
  font-size: 24rpx;
  color: #FF0000;
}
.price1 {
  height: 44rpx;
  font-size: 32rpx;
  color: #FF0000;
  font-family: HelveticaNeue-Bold, HelveticaNeue;
  font-weight: bold;
  line-height: 44rpx;
  letter-spacing: 1rpx;
}
.price2 {
  font-size: 20rpx;
  color: #B2B2B2;
  text-decoration: line-through;
  letter-spacing: .5rpx;
}
.span {
  font-size: 24rpx;
}
.btn {
  position: absolute;
  right: 0;
  bottom: 10rpx;
  width: 176rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: linear-gradient(90deg, #FF5E4B 0%, #F32214 100%);
  border-radius: 30rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}
.ed {
  position: absolute;
  right: 0;
  bottom: 10rpx;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #D8D8D8;
  border-radius: 30rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.mark {
  width: 100%;
  height: 88rpx;
}
