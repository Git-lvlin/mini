page {
  background-color: #f5f5f5;
}
.canvasSignature .title{
    text-align: center;
    color: #838383;
    padding: 20rpx 0;
}
.signature{
    width: 100%;
    height: 400rpx;
    background-color: #F8F8F8;
}
.canvasSignature .btn {
    width: 680rpx;
    height: 100rpx;
    text-align: right;
    margin: 13rpx;
  }
.canvasSignature .btn button:first-child {
    color: #fff;
    background-color: #9C26B0;
  }
.canvasSignature .btn button:last-child {
    color: white;
    background-color: #0081FF;
  }
.canvasSignature .btn button {
    width: 280rpx;
    height: 70rpx;
    display: inline-block;
    line-height: 40rpx;
    border-radius: 8rpx;
    box-shadow: 0px 0px 1px 1px #c5c5c5;
    margin: 15rpx;
  }
canvas {
    background-color: white;
  }