
.user_good_card {
  /* overflow: hidden; */
  margin-bottom: 14rpx;
  display: flex;
  border-bottom: 1rpx solid rgba(238, 238, 238, 1);
}

.user_good_cover {
  overflow: hidden;
  vertical-align: middle;
  background-color: #fff;
  border-radius: 16rpx 16rpx 0 0;
}

.user_good_info {
  padding: 14rpx 16rpx 16rpx;
  background-color: #fff;
  border-radius: 0 0 16rpx 16rpx;
}

.user_good_title {
  height: 40rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 12rpx;
}

.user_good_sku {
  height: 30rpx;
  color: #999999;
  font-size: 28rpx;
  line-height: 30rpx;
  margin-bottom: 16rpx;
}

.user_good_price {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user_price_title {
  color: #e7532c;
  font-size: 28rpx;
  line-height: 40rpx;
}

.user_cart {
  position: relative;
}

.user_cart_icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.user_cart_num {
  color: rgba(231, 117, 92, 1);
  font-size: 24rpx;
}