<wxs module="tools" src="../../../wxs/common.wxs" />

<view class="cell_box">
  <view class="flex_middle cell_info {{border ? 'border' : ''}}">
    <view class="title">{{title}}</view>
    <view class="flex_middle right_box">
      <view class="value">{{value}}</view>
      <view class="flex_fix flex_center icon_box" wx:if="{{jump}}">
        <image class="flex_fix cell_icon" src="{{tools.getImgUrl('miniprogram/common/right_jump.png')}}" />
      </view>
    </view>
  </view>
</view>
