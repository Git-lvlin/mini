.bar {
  width: 100%;
  height: 66rpx;
  background: linear-gradient(0deg, rgba(51, 132, 255, 0.1), rgba(51, 132, 255, 0.1)), #FFFFFF;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
  box-sizing: border-box;
  position: relative;
}

.text {
  font-size: 24rpx;
  color: #2FA5E5;
}

.notice {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
}

.check {
  position: absolute;
  right: 15rpx;
  font-size: 24rpx;
  color: #2FA5E5;
}