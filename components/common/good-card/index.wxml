<wxs module="tools" src="../../../wxs/common.wxs" />

<view class="good_card" style="width: {{size}}">
  <van-image
    width="{{size}}"
    height="{{size}}"
    custom-class="good_cover"
    src="{{data.image}}"
    bindtap="onToDetail"
  />
  <view class="good_info">
    <view class="good_title text_one_line">{{data.title}}</view>
    <view class="good_sku text_one_line">{{data.goodsDesc}}</view>
    <view class="good_price">
        <view class="flex_middle">
          <price-mobel money="{{data.goodsSaleMinPrice}}" minSize="{{24}}" defaultColor="#ccc" marketMoney="{{data.skuMarketPrice}}" />
        </view>
        <view class="cart">
          <view class="cart_num">{{data.goodsSaleNumDesc}}</view>
        </view>
    </view>
    <view class="good_store" wx:if="{{data.storeName?true:false}}">
      <view class="store_name">{{data.storeName}}</view>
      <view class="advance" bindtap="onToStore">
        <view class="advance_store">进店逛逛</view>
        <view class="right_arrow_gray" />
      </view>
    </view>
  </view>
</view>