<view class="nav_container">
  <view class="seize_seat" style="height: {{navTotalHeight}}px;"/>
  <view class="nav_content" style="color: {{fontColor}} !important;background-color: {{background}};">
    <view class="status_bar" style="height: {{$.systemInfo.statusBarHeight}}px;" />
      <view class="nav_bar" style="min-height: {{$.systemInfo.navBarHeight}}px;">
      <view class="nav_default" style="height: {{$.systemInfo.navBarHeight}}px;">
        <view class="back_icon {{isHome ? 'back_icon_home' : ''}}">
          <van-icon name="arrow-left" size="20" bind:click="onClickBack"/>
          <block wx:if="{{isHome}}">
            <view class="back_icon_line" style="background-color: {{fontColor}}" />
            <van-icon name="wap-home-o" size="20" bind:click="onClickHome"/>
          </block>
        </view>
        <view class="nav_title">页面标题{{afd}}</view>
      </view>
      <view class="nav_search" wx:if="{{showSearch}}" >
        <van-search
          value="{{ value }}"
          shape="round"
          use-action-slot
          background="{{background}}"
          placeholder="请输入搜索关键词"
        >
          <view slot="action" bind:tap="onClick">搜索</view>
        </van-search>
      </view>
      <slot />
    </view>
  </view>
</view>