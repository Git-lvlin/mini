<wxs module="tools" src="../../../wxs/common.wxs" />

<view class="message">
  <view class="message_content">
    <image class="massage_icon" src="{{tools.getImgUrl('miniprogram/home/message_icon.png')}}" />
    <view class="line" />
    <view class="message_body">
      <swiper 
        class="message_list"
        circular
        vertical
        autoplay
        interval="3000"
        duration="800"
      >
        <swiper-item
          class="message_item text_one_line"
          wx:for="{{msgList}}"
          wx:key="id"
          data-data="{{item}}"
          bindtap="onMsg"
        >
          <text>{{item.title}}</text>
        </swiper-item>
      </swiper>
    </view>
  </view>
</view>
