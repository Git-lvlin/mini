<wxs module="tools" src="../../../wxs/common.wxs" />
<wxs module="utils" src="../../../wxs/homeFloor.wxs" />

<view class="seckill" style="{{utils.getHeadBackCss(floor.style, 'miniprogram/home/seckill_back.png')}}">
  <view class="sec_body">
    <view class="head">
      <panel-title
        title="{{floor.header.title[0].name}}"
        desc="{{floor.header.subTitle[0].name}}"
      >
        <view class="down_time" slot="body">
          <van-count-down
            use-slot time="{{ time }}"
            bind:change="handleTimeChange"
          >
            <text class="time_item days" wx:if="{{timeData.days}}">{{ timeData.days }}天</text>
            <text class="time_item">{{ timeData.hours < 10 ? "0" + timeData.hours : timeData.hours }}</text>
            <text class="time_mark">:</text>
            <text class="time_item">{{ timeData.minutes < 10 ? "0" + timeData.minutes : timeData.minutes }}</text>
            <text class="time_mark">:</text>
            <text class="time_item">{{ timeData.seconds < 10 ? "0" + timeData.seconds : timeData.seconds }}</text>
          </van-count-down>
        </view>
      </panel-title>
      <!-- 
        more
        moreText="{{floor.header.subTitle[0].action}}"
        actionUrl="{{floor.header.subTitle[0].actionUrl}}"
      -->
    </view>
  <scroll-view scroll-x class="good_scroll" bindscrolltolower="handleScroll">
    <view class="good_list">
      <view
        class="good_item"
        wx:for="{{secGoodList}}"
        wx:key="id"
        data-data="{{item}}"
        bindtap="onGood"
      >
        <van-image
          width="150rpx"
          height="150rpx"
          fit="cover"
          src="{{item.image}}"
        />
        <view class="price" style="background-image: url({{tools.getImgUrl('miniprogram/home/kill_price.png')}})">
          <view class="sale">￥<text class="sale_text">{{item.salePrice}}</text></view>
          <view class="market">￥{{item.marketPrice}}</view>
        </view>
      </view>
    </view>
  </scroll-view>
  </view>
</view>
