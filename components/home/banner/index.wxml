
<view class="banner">
  <swiper
    class="swiper"
    indicator-dots
    indicator-color="#fff"
    indicator-active-color="#d7291d"
    autoplay
    interval="3000"
    duration="1000"
    circular
  >
    <swiper-item
      class="swiper_item"
      wx:for="{{bannerList}}"
      wx:key="id"
      data-data="{{item}}"
      bindtap="onBanner"
    >
      <van-image
        width="702rpx"
        height="200rpx"
        fit="cover"
        src="{{item.image}}"
      />
    </swiper-item>
  </swiper>
</view>
