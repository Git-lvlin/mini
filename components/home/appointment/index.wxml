<wxs module="tools" src="../../../wxs/common.wxs" />
<wxs module="utils" src="../../../wxs/homeFloor.wxs" />

<view
  class="appointment"
  style="{{utils.getHeadBackCss(floor.style, tools.getImgUrl('miniprogram/home/appointment_back.png'))}}"
>
  <panel-title
    desc="{{floor.header.subTitle[0].name}}"
    color="#fff"
    moreColor="#fff"
    more
    moreText="{{floor.header.subTitle[0].action}}"
    actionUrl="{{floor.header.subTitle[0].actionUrl}}"
    useTitleSlot
  >
    <!-- actionUrl="{{moreRouter ? moreRouter : floor.header.subTitle[0].actionUrl}}" -->
    <image class="title_img" slot="title" src="{{tools.getImgUrl('miniprogram/home/appointment_title.png')}}" />
  </panel-title>
  <scroll-view scroll-x class="list">
    <view class="good_list">
      <view
        class="good_item"
        wx:for="{{goodList}}"
        wx:key="id"
        data-data="{{item}}"
        bindtap="onToDetail"
      >
        <view class="cover_img">
          <van-image
            width="200rpx"
            height="200rpx"
            fit="cover"
            class="cover"
            src="{{item.image}}"
          />
        </view>
        <view class="title text_two_line">{{item.title}}</view>
        <price-mobel
          money="{{item.salePrice}}"
          marketMoney="{{item.marketPrice}}"
          max-size="{{28}}"
          min-size="{{20}}"
        />
      </view>
    </view>
  </scroll-view>
</view>
