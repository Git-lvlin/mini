
page {
  background-color: #ffffff;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  overflow: hidden;
}

.nav_content {
  width: 100%;
  background-position: left bottom;
  background-size: 100% auto;
}

.nav_body {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  background-position: left bottom;
  background-size: 100% auto;
}

.nav_location {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding-left: 24rpx;
}

.location_icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 4rpx;
}

.address {
  max-width: 420rpx;
  height: 48rpx;
  font-weight: 500;
  color: black;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  line-height: 48rpx;
  margin-right: 8rpx;
}

.right_icon {
  width: 14rpx;
  height: 10rpx;
}

.home_content {
  top: 100rpx;
  position: relative;
  flex: 1;
  height: 1000rpx;
}

.pul_icon {
  position: absolute;
  top: -120rpx;
  left: 50%;
  z-index: 0;
  width: 160rpx;
  height: 160rpx;
  transform: translateX(-50%);
}

.bar_height {
  height: 98rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.search_content {
  height: 102rpx;
  box-sizing: border-box;
  padding: 16rpx 24rpx;
}

.search_body {
  display: flex;
  align-items: center;
  width: 100%;
  height: 68rpx;
  padding: 0 2rpx 0 16rpx;
  background-color: #fff;
  box-sizing: border-box;
  border: 4rpx solid #FE4F8F;
  border-radius: 56rpx;
}

.search_icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.search_text {
  flex: 1;
  color: #999; 
  font-size: 28rpx;
  line-height: 40rpx;
}

.search_btn {
  width: 104rpx;
  height: 56rpx;
  color: #ffffff;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  line-height: 56rpx;
  text-align: center;
  /* background: linear-gradient(90deg, #FF773A 0%, #FE2E1A 100%); */
  background: #FE4F8F;
  border-radius: 56rpx
}
