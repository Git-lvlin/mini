<wxs module="tools" src="../../../wxs/common.wxs" />

<view class="container">
  <view class="header">
    <van-image width="72rpx" height="72rpx" src="{{tools.getImgUrl('miniprogram/common/logo.png')}}" />
    <view class="title">欢迎登录 约购</view>
  </view>
  <view class="login">
    <van-button
      color="#E5352F"
      custom-class="login_btn"
      open-type="getUserInfo"
      type="primary"
      block
      loading-type="spinner"
      loading-text="登录中..."
      wx:if="{{!canUseProfile}}"
      bind:getuserinfo="handleGetUerInfo"
    >登录-</van-button>
    <van-button
      color="#E5352F"
      custom-class="login_btn"
      type="primary"
      block
      loading-type="spinner"
      loading-text="登录中..."
      wx:if="{{canUseProfile}}"
      bindtap="onLogin"
    >登录+</van-button>
    <view class="on_login">不登录，先看看</view>
  </view>
  <view class="other_login" />
  <view class="treaty">
    <van-radio-group value="{{ radio }}" bind:change="onChangeRadio">
      <van-radio
        value="{{ radio }}"
        name="1"
        checked-color="#E5352F"
        icon-size="32rpx"
      >
        登陆/注册即表示您已阅读并同意
        <text class="red_text" bindtap="onClickTreaty">服务协议</text>和
        <text class="red_text" bindtap="onClickTreaty">隐私政策</text>
      </van-radio>
    </van-radio-group>
  </view>

  <van-popup show="{{ showTreaty }}" custom-style="background-color: transparent;" bind:close="onCloseTreaty">
    <treaty-popup bind:close="onCloseTreaty"/>
  </van-popup>
</view>

