/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content: center;
  padding: 0 64rpx;
}

.header {
  margin-top: 60rpx;
}

.header .title {
  width: 356rpx;
  height: 80rpx;
  font-size: 56rpx;
  color: #333333;
  font-weight: 500;
  margin: 16rpx 0 160rpx 0;
}

.login_btn {
  width: 100% !important;
  height: 96rpx !important;
  border-radius: 16rpx !important;
  font-size: 32px;
  color: #FFFFFF;
  font-weight: 500;
}

.on_login {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  margin-top: 48rpx;
}

.other_login{
  height: 450rpx;
}

.treaty {
  display: flex;
  justify-content: center;
  font-size: 20rpx;
  color: #999999;
  text-align: center;
  line-height: 28rpx;
}

.treaty .red_text {
  color: #E5352F ;
  text-decoration: underline;
}