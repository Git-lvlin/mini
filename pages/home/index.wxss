
page {
  background-color: #f5f5f5;
}

.nav_content {
  width: 100%;
  height: 168rpx;
  background-position: left bottom;
  background-size: 100% auto;
}

.nav_body {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 168rpx;
  background-position: left bottom;
  background-size: 100% auto;
}

.nav_location {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding-left: 24rpx;
}

.location_icon {
  width: 32rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.address {
  max-width: 420rpx;
  height: 48rpx;
  font-weight: 500;
  color: #ffffff;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  line-height: 48rpx;
  margin-right: 8rpx;
}

.store_name {
  height: 42rpx;
  color: #ffffff;
  font-size: 26rpx;
  line-height: 42rpx;
  padding: 0 12rpx;
  margin-left: 4rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 6rpx;
}

.right_icon {
  width: 14rpx;
  height: 10rpx;
}

.search_content {
  padding: 16rpx 24rpx;
}

.search_body {
  display: flex;
  align-items: center;
  width: 100%;
  height: 64rpx;
  padding: 0 4rpx 0 16rpx;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 56rpx;
}

.search_icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.search_text {
  flex: 1;
  color: #cccccc; 
  font-size: 28rpx;
  line-height: 40rpx;
}

.search_btn {
  width: 104rpx;
  height: 56rpx;
  color: #ffffff;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  line-height: 56rpx;
  text-align: center;
  background: linear-gradient(90deg, #FF773A 0%, #FE2E1A 100%);
  border-radius: 56rpx
}


.fixation {
  position: fixed;
  right: 24rpx;
  bottom: 300rpx;
  transition: transform .2s linear;
}

.fixation_action {
  transform: translateX(100rpx);
}

.fixation_img {
  /* width: 96rpx;
  height: 120rpx; */
  width: 116rpx;
  height: 144rpx;
}


.bar_height {
  height: 98rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}