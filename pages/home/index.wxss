
page {
  background-color: #f5f5f5;
}

.nav_content {
  width: 100%;
  height: 168rpx;
  background-image: url("https://dev-yeahgo.oss-cn-shenzhen.aliyuncs.com/miniprogram/home/nav_back.png");
  background-position: left bottom;
  background-size: 100% auto;
}

.nav_body {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 168rpx;
}

.nav_location {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding-left: 24rpx;
}

.location_icon {
  width: 32rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.address {
  max-width: 374rpx;
  height: 48rpx;
  font-weight: 500;
  color: #ffffff;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  line-height: 48rpx;
  margin-right: 14rpx;
}

.right_icon {
  width: 36rpx;
  height: 36rpx;
  transform: scale(-1);
}

.search_content {
  padding: 16rpx 24rpx;
}

.search_body {
  display: flex;
  align-items: center;
  width: 100%;
  height: 56rpx;
  padding: 0 4rpx 0 16rpx;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 56rpx;
}

.search_icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.search_text {
  flex: 1;
  color: #cccccc; 
  font-size: 28rpx;
  line-height: 40rpx;
}

.search_btn {
  width: 104rpx;
  height: 48rpx;
  color: #ffffff;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  line-height: 48rpx;
  text-align: center;
  background: linear-gradient(90deg, #FF773A 0%, #FE2E1A 100%);
  border-radius: 48rpx;
}