page{
  background-color: #f5f5f5;
}

.nav_back {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 460rpx;
  overflow: hidden;
}

.nav_back_img {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 600rpx;
}

.content {
  position: relative;
  z-index: 2;
  padding: auto 8rpx;
}
.head {
  display: flex;
  align-items: center;
  padding: 24rpx 24rpx 32rpx;
}

.left_arrow {
  width: 24rpx;
  height: 24rpx;
  border-bottom: 4rpx solid #FFF;
  border-left: 4rpx solid #FFF;
  transform: rotate(45deg);
}
.right_btn {
  color: #ffffff;
  font-size: 32rpx;
  display:flex;
  width:160rpx;
  line-height:40rpx;
}
.right_arrow {
  width: 12rpx;
  height: 12rpx;
  border-top: 4rpx solid #FFF;
  border-right: 4rpx solid #FFF;
  transform: rotate(45deg);
}

.head_title, .head_intro {
  font-weight: 400;
  color: #ffffff;
  font-size: 44rpx;
  line-height: 66rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  width: 70%;
}
.head_intro {
  font-weight: 300;
  font-size: 32rpx;
  width: 95%;
}

.good_list {
  margin-top: 16rpx;
  padding-top: 16rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  background-color:#f5f5f5;
}
.good_item {
  margin-top: 16rpx;
  padding-top: 16rpx;
  flex-grow: 0;
  flex-shrink: 0;
  width: 100%;
  height: 260rpx;
  background-color:#ffffff;
}
.good_card {
  width: 95% !important;
  display:flex;
  margin: 20rpx;
}
.good_title {
  width: 400rpx;
}
