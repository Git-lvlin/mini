
page {
  background-color: #f5f5f5;
}

.box {
  margin-top: 20rpx;
  padding-bottom: 40rpx;
  background-color: #fff;
}

.paragraph {
  padding-left: 32rpx;
  color: #333333;
  font-size: 28rpx;
  line-height: 64rpx;
  text-align: left;
  background-color: #ffffff;
}
.E5352F {
  color: #E5352F;
}
.CCC {
  color: #99999 !important;
}

.numbox {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #000000;
  font-weight: 500;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 120rpx;
}
.num {
  display: flex;
  align-items: center;
  color: #000;
  font-size: 32rpx;
  font-weight: 600;
  padding-right: 24rpx;
}

.controller {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40rpx;
  height: 40rpx;
}

.controller_img {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

.gray_add {
  opacity: 0.15;
}

.num_value {
  min-width: 32rpx;
  height: 40rpx;
  font-size: 28rpx;
  color: #000000;
  font-weight: 400;
  line-height: 40rpx;
  text-align: center;
  padding: 0 20rpx;
  margin: 0 8rpx;
  background: #F2F2F2;
}

.btn_content {
  padding: 16rpx 32rpx;
  border-top: 2rpx solid rgba(0, 0, 0, 0.05);
}

.btn {
  width: 100%;
  height: 72rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  text-align: center;
  font-weight: 500;
  line-height: 72rpx;
  background-image: linear-gradient(144deg, #ED8065 0%, #D7291D 100%);
  border-radius: 36px;
}

.def_btn {
  color: #777;
  background: #f0f0f0;
}
.red_text {
  color: #e5352f;
}

.radio_icon {
  width: 34rpx;
  height: 34rpx;
  vertical-align: middle;
  margin-right: 16rpx;
  margin-bottom: 8rpx;
}
